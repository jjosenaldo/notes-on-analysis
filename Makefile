# MAKEFILE OPTIONS
SHELL			= /bin/bash

# ENVIRONMENT OPTIONS
DOCUMENT_NAME	= main
DOCUMENT_PATH	= ./src
BUILD_PATH		= ./build
OUTPUT_PATH		= .

# COMPILING OPTIONS
COMPILER		= pdflatex
COMPILER_FLAGS	= -halt-on-error -output-directory $(BUILD_PATH)

# ALIASES
BUILD_FILES		= $(BUILD_PATH)/$(DOCUMENT_NAME).{log,aux,bcf,out,run.xml,toc}

default: build

help:
	@echo "These are all the options available:"
	@echo "build\t\t- compile the .tex files to generate the pdf"
	@echo "clean\t\t- remove all the files generated by the 'build' option."
	@echo "cleanall\t\t- remove all the files generated by the 'build' option, including the pdf file."
	@echo "help\t\t- show this message."

build: cleanall
	mkdir -p $(BUILD_PATH)
	$(COMPILER) $(COMPILER_FLAGS) $(DOCUMENT_PATH)/$(DOCUMENT_NAME).tex \
	&& $(COMPILER) $(COMPILER_FLAGS) $(DOCUMENT_PATH)/$(DOCUMENT_NAME).tex \
	&& mv $(BUILD_PATH)/$(DOCUMENT_NAME).pdf $(OUTPUT_PATH)

clean:
	rm -f $(BUILD_FILES)

cleanall: clean
	rm -f $(OUTPUT_PATH)/$(DOCUMENT_NAME).pdf