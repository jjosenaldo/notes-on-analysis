\hypersetup{
  colorlinks   = true, %Colours links instead of ugly boxes
  urlcolor     = blue, %Colour for external hyperlinks
  linkcolor    = blue, %Colour of internal links
  citecolor   = red %Colour of citations
}

%   Part formatting when it consists of a book
%
%   1 - Authors' names
%   2 - Book's title
%   3 - Entry in the ToC for that part 
\newcommand{\partbook}[3]{
\part[#3]{\emph{#2}, by #1}
}

%   Imports the notes about a book
%
%   1 - Name of the folder that contains the notes
\newcommand{\importbooknotes}[1]{
    \subimport*{src/#1/}{main.tex}
}

%   Imports the notes of a chapter of a book
%
%   1 - Name of the .tex file that contains the notes of the chapter
\newcommand{\importchapternotes}[1]{
    \subimport*{chapters/}{#1}
}

%   Allows a level of sectioning below subsubsection (namely, paragraph)
\setcounter{secnumdepth}{4}
\titleformat{\paragraph}
{\normalfont\normalsize\bfseries}{\theparagraph}{1em}{}
